<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:background="@drawable/border1">
        <ListView
            android:id="@+id/lvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:background="@color/gray71">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.625"
            android:layout_height="match_parent"
            android:gravity="center">
            <EditText
                android:id="@+id/etTypingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textborder"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.0909"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageButton
                android:id="@+id/ibtEmoticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/emoticon_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.18181"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageButton
                android:id="@+id/ibtSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/send_message"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/home/manhtuong/Desktop/DauTri/app/src/main/res/layout/chat_friend.xml -->